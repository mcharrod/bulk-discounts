<h1>Edit discount</h1>

<%= form_with url: "/merchants/#{@merchant.id}/discounts/#{@discount.id}", method: :patch, local: true do |f| %>

  <%= f.label :name, "Discount name:" %>
  <%= f.text_field :name, value: @discount.name %>

  <%= f.label :percent, "Percent off:" %>
  <%= f.text_field :percent, value: @discount.percent %>

  <%= f.label :min_quantity, "Minimum purchase quantity:" %>
  <%= f.text_field :min_quantity, value: @discount.min_quantity %>

  <%= f.submit %>
<% end %>
