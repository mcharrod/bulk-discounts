<%= form_with url: "/merchants/#{@merchant.id}/discounts", method: :post, local: true do |f| %>

  <%= f.label :name, "Discount name:" %>
  <%= f.text_field :name %>

  <%= f.label :percent, "Percent off:" %>
  <%= f.text_field :percent %>

  <%= f.label :min_quantity, "Minimum purchase quantity:" %>
  <%= f.text_field :min_quantity %>
  
  <%= f.submit %>
<% end %>
